{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "strictNullChecks": true,
    "allowJs": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "./types",
    "importsNotUsedAsValues": "error",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "zarrita": ["./src", "./src/*"]
    }
  },
  "include": ["src/**/*"]
}
