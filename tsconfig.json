{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"declaration": true,
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"files": [],
	"references": [
		{ "path": "packages/@zarrita-storage" },
		{ "path": "packages/zarrita" },
		{ "path": "packages/@zarrita-core" },
		{ "path": "packages/@zarrita-ndarray" }
	]
}
