{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useConst": "off",
				"noParameterAssign": "off"
			},
			"suspicious": {
				"noShadowRestrictedNames": "off"
			}
		}
	},
	"files": {
		"ignore": ["fixtures", "**/dist", "docs/.vitepress/cache", ".changeset"]
	}
}
