		"fixtures": "npm run fixtures-v2 && npm run fixtures-v3"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.3",
		"@changesets/cli": "^2.27.8",
		"@svitejs/changesets-changelog-github-compact": "^1.1.0",
		"@types/node": "^22.7.4",
		"publint": "^0.2.11",
		"typescript": "5.6.2",
		"vitest": "^2.1.1"
	},
	"packageManager": "pnpm@9.7.0"
}
