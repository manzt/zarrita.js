{
  "name": "zarrita-dev",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/manzt/zarrita.js.git"
  },
  "scripts": {
    "test": "node test/index.test.js",
    "test:ci": "npm run lint && npm test | tap-set-exit",
    "lint": "eslint src test --ext .js",
    "build": "tsc",
    "clean": "rimraf src/**/*.js",
    "build:clean": "npm run clean && npm run build"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "no-console": "error",
      "no-cond-assign": "off",
      "no-fallthrough": [
        "error",
        {
          "commentPattern": "break omitted"
        }
      ],
      "semi": "error",
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "prefer-const": "error",
      "sort-imports": [
        "error",
        {
          "ignoreCase": false,
          "ignoreDeclarationSort": true
        }
      ]
    }
  },
  "dependencies": {
    "@types/node": "^14.14.13",
    "zarrita": "file:src"
  },
  "devDependencies": {
    "eslint": "^7.13.0",
    "numcodecs": "^0.1.1",
    "rimraf": "^3.0.2",
    "tap-set-exit": "^1.1.1",
    "typescript": "^4.1.3",
    "zora": "^4.0.1"
  }
}
