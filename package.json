{
	"license": "MIT",
	"scripts": {
		"build": "tsc --build",
		"clean": "pnpm --recursive exec rm -rf dist",
		"test": "npm run fixtures && vitest --api",
		"format": "format .",
		"lint": "biome ci .",
		"fix": "biome check --write .",
		"publint": "pnpm --recursive --filter=\"./packages/**\" exec publint",
